<div class='col-md-3'>
  <div class='well menu-well'>
    <div class='col-md-10 col-md-offset-1'>
      <%=image_tag 'https://fbcdn-profile-a.akamaihd.net/hprofile-ak-xpa1/t1.0-1/p48x48/10455766_657348364314222_7463937380643555250_n.jpg', id: 'state-image', class: "state-pic" %>
    </div>
    <ul class="nav nav-pills nav-stacked">
      <li id="GE" class="filter-button"><%= link_to "Geothermal"%></li>
